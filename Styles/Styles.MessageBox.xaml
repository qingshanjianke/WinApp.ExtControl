<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WinApp.ExtControl.Controls"
                    xmlns:helpers="clr-namespace:WinApp.ExtControl.Helpers">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="../Themes/Basic/ControlBasic.xaml" />
		<ResourceDictionary Source="../Themes/Basic/Animations.xaml" />
		<ResourceDictionary Source="../Styles/Styles.Buttons.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="WE.WDMessageBox" TargetType="{x:Type controls:WDMessageBox}">
		<Setter Property="Foreground" Value="{DynamicResource WE.PrimaryTextBrush}" />
		<Setter Property="Background" Value="{DynamicResource WE.BackgroundBrush}" />
		<Setter Property="BorderBrush" Value="{DynamicResource WE.PrimaryBrush}" />
		<Setter Property="SizeToContent" Value="WidthAndHeight" />
		<Setter Property="ResizeMode" Value="NoResize" />
		<Setter Property="ShowInTaskbar" Value="False" />
		<Setter Property="SnapsToDevicePixels" Value="True" />
		<Setter Property="UseLayoutRounding" Value="True" />
		<Setter Property="TextOptions.TextFormattingMode" Value="Display" />
		<Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
		<Setter Property="WindowStyle" Value="None" />
		<Setter Property="FontFamily" Value="{StaticResource WE.FontFamily}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:WDMessageBox}">
					<Border Background="{TemplateBinding Background}"
					        CornerRadius="4"
					        BorderBrush="{TemplateBinding BorderBrush}"
					        BorderThickness="{TemplateBinding BorderThickness}">
						<Grid Margin="16">
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<controls:SmallPanel Grid.Row="0">
								<DockPanel>
									<TextBlock x:Name="PART_Title"
									           HorizontalAlignment="Left"
									           VerticalAlignment="Center"
									           FontWeight="Bold"
									           FontSize="{StaticResource WE.TitleFontSize}"
									           Foreground="{DynamicResource WE.PrimaryTextBrush}" />
									<Button Name="PART_CloseButton"
									        Margin="0 6"
									        HorizontalAlignment="Right"
									        Visibility="Collapsed"
									        IsTabStop="False"
									        Style="{DynamicResource WE.WindowButtonStyle}"
									        ToolTip="关闭">
										<Path Width="10"
										      Height="10"
										      HorizontalAlignment="Center"
										      VerticalAlignment="Center"
										      Data="{StaticResource WE.WindowCloseGeometry}"
										      Fill="{DynamicResource WE.PrimaryTextBrush}"
										      Stretch="Fill" />
									</Button>
								</DockPanel>
							</controls:SmallPanel>

							<controls:SmallPanel Grid.Row="1" Margin="0 20">
								<DockPanel>
									<Path x:Name="PART_Path"
									      Width="25"
									      Height="25"
									      Visibility="Collapsed"
									      Data="{StaticResource WE.InformationGeometry}"
									      Fill="{DynamicResource WE.PrimaryBrush}"
									      Stretch="Fill" />
									<TextBox x:Name="PART_Message"
									         Width="Auto"
									         MaxWidth="500"
									         Padding="10 0"
									         VerticalAlignment="Center"
									         BorderThickness="0"
									         FontSize="{DynamicResource WE.PrimaryFontSize}"
									         Foreground="{DynamicResource WE.RegularTextBrush}"
									         IsReadOnly="True"
									         TextWrapping="Wrap" />
								</DockPanel>
							</controls:SmallPanel>

							<Separator Grid.Row="2"
							           Margin="-20 8"
							           BorderThickness="1"
							           BorderBrush="LightGray" />

							<controls:SmallPanel Grid.Row="3" Margin="0" HorizontalAlignment="Center">
								<UniformGrid Height="38" Rows="1">
									<Button x:Name="PART_ButtonNo"
									        Width="120"
									        Margin="6 0 0 0"
									        VerticalAlignment="Center"
									        helpers:ElementHelper.CornerRadius="{Binding Path=(controls:WDMessageBox.ButtonCornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
									        Content="否"
									        Style="{DynamicResource WE.SureButton}"
									        Visibility="Collapsed" />
									<Button x:Name="PART_ButtonYes"
									        Width="120"
									        VerticalAlignment="Center"
									        helpers:ElementHelper.CornerRadius="{Binding Path=(controls:WDMessageBox.ButtonCornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
									        Content="是"
									        Style="{DynamicResource WE.Sure}"
									        Visibility="Collapsed" />
									<Button x:Name="PART_ButtonCancel"
									        Width="120"
									        Margin="6 0 0 0"
									        VerticalAlignment="Center"
									        helpers:ElementHelper.CornerRadius="{Binding Path=(controls:WDMessageBox.ButtonCornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
									        Content="取消"
									        Foreground="{StaticResource AppFontThemeBrush}"
									        Background="#e9eef6"
									        Style="{DynamicResource WE.SureButton}"
									        Visibility="Collapsed" />
									<Button x:Name="PART_ButtonOK"
									        Width="120"
									        Margin="6 0 0 0"
									        VerticalAlignment="Center"
									        helpers:ElementHelper.CornerRadius="{Binding Path=(controls:WDMessageBox.ButtonCornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
									        Foreground="{StaticResource WhiteBrush}"
									        Background="#ff1f1f"
									        Content="确定"
									        Style="{DynamicResource WE.SureButton}" />
								</UniformGrid>
							</controls:SmallPanel>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style BasedOn="{StaticResource WE.WDMessageBox}" TargetType="{x:Type controls:WDMessageBox}" />
</ResourceDictionary>