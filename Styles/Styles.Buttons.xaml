	<Style x:Key="WE.DefaultButton" BasedOn="{StaticResource WE.BaseButton}" TargetType="{x:Type Button}">
		<Setter Property="Background" Value="{DynamicResource WE.BackgroundBrush}" />
		<Setter Property="BorderBrush" Value="{DynamicResource WE.BaseBrush}" />
		<Setter Property="Foreground" Value="{DynamicResource WE.RegularTextBrush}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<controls:SmallPanel>
						<Border x:Name="PART_Border"
						        Background="{TemplateBinding Background}"
						        BorderBrush="{TemplateBinding BorderBrush}"
						        BorderThickness="{TemplateBinding BorderThickness}"
						        CornerRadius="15"
						        SnapsToDevicePixels="True" />
						<ContentPresenter x:Name="PART_ContentPresenter"
						                  Margin="{TemplateBinding Padding}"
						                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
						                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
						                  RecognizesAccessKey="True"
						                  TextElement.Foreground="{TemplateBinding Foreground}" />
					</controls:SmallPanel>
					<ControlTemplate.Triggers>
						<Trigger Property="IsFocused" Value="True">
							<Setter Property="BorderBrush" Value="{DynamicResource WE.PrimaryBrush}" />
							<Setter Property="Background" Value="{DynamicResource WE.PrimaryMouseOverBrush}" />
							<Setter Property="Foreground" Value="{DynamicResource WE.PrimaryBrush}" />
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter Property="BorderBrush" Value="{DynamicResource WE.PrimaryBrush}" />
							<Setter Property="Background" Value="{DynamicResource WE.PrimaryMouseOverBrush}" />
							<Setter Property="Foreground" Value="{DynamicResource WE.PrimaryBrush}" />
						</Trigger>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="BorderBrush" Value="{DynamicResource WE.PrimaryBrush}" />
							<Setter Property="Background" Value="{DynamicResource WE.PrimaryMouseOverBrush}" />
							<Setter Property="Foreground" Value="{DynamicResource WE.PrimaryBrush}" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="True">
							<Setter Property="BorderBrush" Value="#2451A2" />
							<Setter Property="Background" Value="Transparent" />
							<Setter Property="Foreground" Value="#2451A2" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="BorderBrush" Value="#D8D8D8" />
							<Setter Property="Background" Value="Transparent" />
							<Setter Property="Foreground" Value="#D8D8D8" />
						</Trigger>
						<Trigger Property="helpers:ElementHelper.IsRound" Value="True">
							<Setter Property="Padding" Value="0" />
							<Setter Property="helpers:ElementHelper.CornerRadius" Value="{Binding ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource WE.HalfValueConverter}}" />
							<Setter TargetName="PART_Border" Property="Width">
								<Setter.Value>
									<MultiBinding Converter="{StaticResource WE.WidthHeightEqualValueConverter}">
										<Binding ElementName="PART_Border" Path="ActualWidth" />
										<Binding ElementName="PART_Border" Path="ActualHeight" />
									</MultiBinding>
								</Setter.Value>
							</Setter>
							<Setter TargetName="PART_Border" Property="Height" Value="{Binding Width, RelativeSource={RelativeSource Self}}" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

