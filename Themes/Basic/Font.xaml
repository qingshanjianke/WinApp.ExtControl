<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<!--  字体大小  -->

	<sys:Double x:Key="WE.PrimaryFontSize">13</sys:Double>
	<sys:Double x:Key="WE.MediumFontSize">14</sys:Double>
	<sys:Double x:Key="WE.TitleFontSize">16</sys:Double>

	<FontFamily x:Key="WE.FontFamily">
		Helvetica Neue For Number,
		-apple-system,
		BlinkMacSystemFont,
		Segoe UI,
		Roboto,
		PingFang SC,
		Hiragino Sans GB,
		Microsoft YaHei,
		Helvetica Neue,
		Helvetica, Arial,
		sans-serif
	</FontFamily>

	<FontStretch x:Key="WE.FontStretch">Normal</FontStretch>
	<FontStyle x:Key="WE.FontStyle">Normal</FontStyle>
	<FontWeight x:Key="WE.FontWeight">Normal</FontWeight>
</ResourceDictionary>